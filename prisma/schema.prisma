// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Payment {
  credito
  debito
  dinheiro
  pix
}

model orders {
  id      Int     @id @default(autoincrement())
  name    String
  items   String
  adress  String
  payment Payment
}

enum ItemType {
  hamburger
  bebida
  porcao
  combo
  promocao
}

model orderItem {
  id       Int @id @default(autoincrement())
  quantity Int
  itemsId  Int
  ordersId Int
}

model items {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  picture     String?  @default("https://odoo-community.org/web/image/product.template/1044/image_1024?unique=993283e")
  description String
  price       Float
  avaliable   Boolean? @default(true)
  type        ItemType
}

model users {
  id       Int    @id @default(autoincrement())
  user     String @unique
  password String
}
